# Kairos Agent - Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit .env files with real credentials!

# ============================================================
# CLOUD MODE CONFIGURATION (IMPORTANT)
# ============================================================

# CLOUD_MODE: Controls whether to use real Vertex AI
# - "true": Use real Vertex AI (requires PROJECT_ID)
# - "false": Use deterministic responses (for demos/testing)
CLOUD_MODE=false

# ============================================================
# GOOGLE CLOUD CONFIGURATION
# ============================================================

# Google Cloud Project ID (REQUIRED when CLOUD_MODE=true)
PROJECT_ID=your-project-id

# Google Cloud Region for Vertex AI
LOCATION=us-central1

# ============================================================
# LOCAL AGENT CONFIGURATION
# ============================================================

# Cloud Run service URL (get this after deployment)
CLOUD_SERVICE_URL=http://localhost:8080

# Your productivity goals (comma-separated)
USER_GOALS=coding,learning,writing

# Demo mode - simulates Windows activity
DEMO_MODE=false


# ============================================================
# OPTIONAL CONFIGURATION
# ============================================================

# Enable debug mode (more verbose errors)
DEBUG=false

# Custom productive apps (comma-separated, lowercase)
# CUSTOM_PRODUCTIVE_APPS=myapp,customtool

# Custom unproductive apps (comma-separated, lowercase)
# CUSTOM_UNPRODUCTIVE_APPS=mygame,timewaster

# Minimum minutes between nudges (default: 10)
# MIN_NUDGE_INTERVAL=10

# Maximum nudges per hour (default: 3)
# MAX_NUDGES_PER_HOUR=3
